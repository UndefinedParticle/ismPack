<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/searchUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="chiNmoy"
        android:textColor="#070707"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/searchItem"
        app:layout_constraintStart_toStartOf="@+id/searchItem"
        app:layout_constraintTop_toTopOf="@+id/exploreSearchPicture" />

    <TextView
        android:id="@+id/searchItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:text="gadda / Grief"
        android:textSize="@dimen/_14mdp"
        app:layout_constraintBottom_toBottomOf="@+id/exploreSearchPicture"
        app:layout_constraintEnd_toStartOf="@+id/exploreSearchPicture"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/exploreSearchPicture" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/exploreSearchPicture"
        android:layout_width="@dimen/_60mdp"
        android:layout_height="@dimen/_40mdp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gadda_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="15dip"
        app:riv_mutate_background="true" />


</androidx.constraintlayout.widget.ConstraintLayout>